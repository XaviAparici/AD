<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="APP">
	<class name="Llibre" table="llibres">
		<id name="id" column="id">
			<generator class="increment"/>
		</id>
		<property name="titol" type="string" column="titol"/>
		<property name="autor" type="string" column="autor"/>
		<property name="anyNaixement" type="string" column="any_naixement"/>
		<property name="anyPublicacio" type="string" column="any_publicacio"/>
		<property name="editorial" type="string" column="editorial"/>
		<property name="pagines" type="string" column="n_pagines"/>
	</class>
</hibernate-mapping>